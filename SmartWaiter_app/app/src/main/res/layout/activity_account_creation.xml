<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin"
    android:weightSum="1"
    tools:context="com.example.pavneetjauhal.smartwaiter.AccountCreationActivity">

    <TextView
        android:id="@+id/personalDetailsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="@string/create_account_activity_personal_details_label"
        android:textSize="28sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/create_account_activity_personal_details_label_2"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:background="@drawable/edittextstyle"
        android:gravity="bottom"
        android:hint="@string/create_account_activity_password_label"
        android:inputType="textPassword"
        android:maxLength="5"
        android:padding="10dp"
        android:singleLine="true" />


    <EditText
        android:id="@+id/firstNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:background="@drawable/edittextstyle"
        android:hint="@string/create_account_activity_first_name_label"
        android:padding="10dp"
        android:singleLine="true" />

    <EditText
        android:id="@+id/lastNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:background="@drawable/edittextstyle"
        android:hint="@string/create_account_activity_last_name_label"
        android:padding="10dp"
        android:singleLine="true" />

    <EditText
        android:id="@+id/addressEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:background="@drawable/edittextstyle"
        android:hint="@string/create_account_activity_address_label"
        android:padding="10dp"
        android:singleLine="true"

        />

    <EditText
        android:id="@+id/postalCodeEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:background="@drawable/edittextstyle"
        android:hint="@string/create_account_activity_postal_code_label"
        android:padding="10dp"
        android:singleLine="true"

        />

    <EditText
        android:id="@+id/phoneNumberEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittextstyle"
        android:hint="@string/create_account_activity_phone_number_label"
        android:inputType="phone"
        android:padding="10dp"
        android:singleLine="true" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@drawable/edittextstyle"
        android:gravity="center"
        android:onClick="createAccount"
        android:text="@string/create_account_activity_create_account_button_label"
        android:textColor="#FFFFFF" />
</LinearLayout>