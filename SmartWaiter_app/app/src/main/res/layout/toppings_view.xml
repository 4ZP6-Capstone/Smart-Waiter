<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/checkTopping"
        android:layout_alignLeft="@+id/txtToppingPrice"
        android:layout_alignStart="@+id/txtToppingPrice"
        android:text="Text shown here"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/txtToppingPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtName"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="15dp" />

    <CheckBox
        android:id="@+id/checkTopping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="42dp"
        android:layout_marginRight="42dp"
        android:checked="false" />

</RelativeLayout>